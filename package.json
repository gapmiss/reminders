{
	"name": "reminders",
	"version": "1.0.0",
	"description": "A comprehensive reminder management system for Obsidian.md with multi-tag support, advanced filtering, snoozing, and smart notifications",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest watch",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"release": "node release.mjs",
		"release:minor": "node release.mjs minor",
		"release:major": "node release.mjs major"
	},
	"keywords": [
		"obsidian",
		"obsidian-plugin",
		"reminders",
		"notifications",
		"productivity",
		"task-management",
		"time-management",
		"scheduling"
	],
	"author": "@gapmiss",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^16.11.6",
		"@vitest/coverage-v8": "^4.0.2",
		"@vitest/ui": "^4.0.2",
		"builtin-modules": "3.3.0",
		"esbuild": "^0.25.8",
		"happy-dom": "^20.0.8",
		"obsidian": "latest",
		"tslib": "2.4.0",
		"typescript": "4.7.4",
		"vitest": "^4.0.2"
	},
	"dependencies": {
		"date-fns": "^4.1.0"
	}
}
